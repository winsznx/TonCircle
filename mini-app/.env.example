# TON Connect Configuration
VITE_TON_MANIFEST_URL=https://your-app-url.com/tonconnect-manifest.json
VITE_APP_URL=https://your-app-url.com

# TON Network (testnet | mainnet)
VITE_TON_NETWORK=testnet

# Contract Addresses - TESTNET (fill after deployment)
VITE_GROUP_VAULT_ADDRESS=
VITE_EXPENSE_SPLITTER_ADDRESS=
VITE_GOAL_CONTRACT_ADDRESS=

# Contract Addresses - MAINNET (fill after mainnet deployment)
VITE_GROUP_VAULT_ADDRESS_MAINNET=
VITE_EXPENSE_SPLITTER_ADDRESS_MAINNET=
VITE_GOAL_CONTRACT_ADDRESS_MAINNET=

# Telegram Configuration
VITE_BOT_USERNAME=@your_bot_username
VITE_BOT_NAME=TON Split Bot

# API Configuration (if using backend API)
VITE_API_URL=http://localhost:3001

# Feature Flags
VITE_ENABLE_GOALS=true
VITE_ENABLE_ESCROW=false
VITE_ENABLE_BADGES=false
