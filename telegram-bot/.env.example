# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Mini App URL
MINI_APP_URL=https://your-app-url.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tonsplit
# Or MongoDB
# DATABASE_URL=mongodb://localhost:27017/tonsplit

# TON Network Configuration
TON_NETWORK=testnet
TON_API_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here

# Contract Addresses - TESTNET
GROUP_VAULT_ADDRESS=
EXPENSE_SPLITTER_ADDRESS=
GOAL_CONTRACT_ADDRESS=

# Contract Addresses - MAINNET
GROUP_VAULT_ADDRESS_MAINNET=
EXPENSE_SPLITTER_ADDRESS_MAINNET=
GOAL_CONTRACT_ADDRESS_MAINNET=

# Port for webhook (if using)
PORT=3001

# Bot Configuration
REMINDER_INTERVAL=86400000
# 24 hours in milliseconds

# Node Environment
NODE_ENV=development
